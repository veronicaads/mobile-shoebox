<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.ac.umn.shoebox.OrderFragment"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="5dp">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="20dp"
        >

        <TableRow
            >
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Cabang"
                android:textSize="18dp"
                />
            <Spinner
                android:id="@+id/cabang"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Service"
                android:textSize="18dp"
                />
            <Spinner
                android:id="@+id/service"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Sub Service"
                android:textSize="18dp"
                />
            <Spinner
                android:id="@+id/subservice"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                />
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="18dp"
                android:text="Merk Sepatu"
                />
            <EditText
                android:id="@+id/merek_edit"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>

        <TableRow
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="18dp"
                android:text="Upload Shoes Image"
                />


            <Button
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:id="@+id/camerabutton"
                android:background="@color/purple"
                android:text="Take from Camera"
                android:textColor="@color/white"
                />

        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text=""
                />
            <Button
                android:layout_weight="1"
                android:id="@+id/gallerybutton"
                android:layout_width="0dp"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:layout_height="wrap_content"
                android:text="Choose from Gallery"
                >
            </Button>
        </TableRow>
        <TableRow>
            <TextView
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:textSize="18dp"
                android:text="Comment :"
                />
            <EditText
                android:id="@+id/keterangan_edit"
                android:inputType="textMultiLine"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                />
        </TableRow>
        <TableRow>

            <ImageView
                android:id="@+id/pict_sepatu"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/ic_image_black_24dp" />
        </TableRow>
        <TableRow android:layout_marginTop="20dp">
            <Button
                android:id="@+id/order_btn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Order"
                android:background="@color/purple"
                android:textColor="@color/white"
                />
            <Button
                android:id="@+id/back_btn"
                android:layout_width="0dp"
                android:layout_marginLeft="5dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:background="@color/purple"
                android:textColor="@color/white"
                />
        </TableRow>


        <TableRow
            android:layout_marginTop="20dp">
            <TextView
                android:id="@+id/text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:background=" @drawable/border"
                android:paddingBottom="15dp"
                android:layout_marginBottom="10dp"
                />
        </TableRow>


    </TableLayout>
</ScrollView>
</RelativeLayout>
