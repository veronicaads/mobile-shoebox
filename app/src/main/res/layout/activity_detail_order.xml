<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="id.ac.umn.shoebox.DetailOrderActivity">
    <ImageView
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/sepatu"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:src="@drawable/shoes" />s
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">
            <TableRow
                android:padding="5dp"
                >
                <TextView
                    android:text="Nomor Order   :"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:text="-"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:id="@+id/no_order"
                    />
            </TableRow>
            <TableRow android:padding="5dp">
                <TextView
                    android:text="Nomor Lemari :"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    />
                <TextView
                    android:text="-"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:gravity="left"
                    android:textSize="18sp"
                    android:id="@+id/nolemari"
                    />
            </TableRow>
            <TableRow
                android:padding="5dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Status               :"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:gravity="left"
                    android:id="@+id/status"
                    android:text="-" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Nama Pemilik  :"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:id="@+id/user_name"
                    android:text="-" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Service              :"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:id="@+id/service"
                    android:text="-" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Subservice        :"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:id="@+id/subservice"
                    android:text="-" />
            </TableRow>
            <TableRow
                android:padding="5dp">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Merk Sepatu     :"
                    android:textStyle="bold"
                    android:textSize="18sp"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="15sp"
                    android:id="@+id/merk"
                    android:text="-"
                    android:layout_marginTop="10dp"/>
            </TableRow>
            <TableRow
                android:paddingTop="15dp">
                <Button
                    android:id="@+id/status_btn"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Change Status"
                    android:background="@color/purple"
                    android:textColor="@color/white"
                    android:layout_marginRight="5dp"
                    />
                <Button
                    android:id="@+id/back_btn"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Back"
                    android:textColor="@color/white"
                    android:background="@color/purple"
                    />
            </TableRow>
        </TableLayout>
    </ScrollView>


</LinearLayout>
