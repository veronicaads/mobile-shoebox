<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="id.ac.umn.shoebox.BuktiUploadActivity">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
            <TextView
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_weight="1"
                android:text="Upload Bukti Transfer" />
            <TextView
                android:id="@+id/no_order"
                android:text=""
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"/>


        <ImageView
            android:id="@+id/buktibayar"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:src="@drawable/upload" />

            <!--<Button-->
                <!--android:id="@+id/btnTakeImage"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_weight="1"-->
                <!--android:background="@color/purple"-->
                <!--android:textColor="@color/white"-->
                <!--android:layout_marginBottom="10dp"-->
                <!--android:text="Take From Camera" />-->

            <Button
                android:id="@+id/btnGalerryImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Choose Image Gallery"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:layout_marginBottom="10dp"/>
        <TableRow>
            <Button
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:text="Submit"
                android:layout_marginRight="10dp"/>
            <Button
                android:id="@+id/btnBack"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:background="@color/purple"
                android:textColor="@color/white"
                android:layout_height="match_parent"
                android:text="Back" />
        </TableRow>



    </TableLayout>
</ScrollView>


</android.support.constraint.ConstraintLayout>


